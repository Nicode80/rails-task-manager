<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to 'Edit this task', edit_task_path(@task), class: 'btn btn-outline-secondary' %>
</div>

<div>
  <%= @task.details %>
</div>

<div>
  <% if @task.completed %>
    <p> ☑ <%= @task.title %></p>
  <% else %>
    <p> ☐ <%= @task.title %></p>
  <% end %>
</div>

<%= link_to 'Back to list', tasks_path %>
